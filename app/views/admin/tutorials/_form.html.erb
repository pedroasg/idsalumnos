<%= simple_form_for [:admin, @tutorial] do |f| %>
  <%= f.input :name, label: "Nombre" %>
  <%= f.input :description, label: "Descripción",
              hint: "Algunos de los estilos pueden romper el estilo de la
                pagina, verifica que no sea así", :as => :ckeditor %>
  <%= f.input :url, label: "Enlace" %>
  <%= f.input :language, label: "Idioma" %>
  <%= f.submit %>
<% end %>
