<%= simple_form_for [:admin, @article] do |f| %>
  <%= f.input :title, label: "Titulo" %>
  <%= f.input :body, label: "Contenido",
              hint: "Algunos de los estilos pueden romper el estilo de la
                pagina, verifica que no sea asÃ­", :as => :ckeditor %>
  <%= f.input :image, label: "Imagen",
                      hint: "Agrega una imagen relacionada a la noticia" %>
  <%= f.hidden_field :author,
    value: current_user.first_name + " " + current_user.last_name %>
  <%= f.submit %>
<% end %>
