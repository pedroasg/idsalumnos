<%= simple_form_for [:admin, @article] do |f| %>
  <%= f.input :title %>
  <%= f.input :body, :as => :ckeditor,
              :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
  <%= f.input :image %>
  <%= f.hidden_field :author,
    value: current_user.first_name + " " + current_user.last_name %>
  <%= f.submit %>
<% end %>
