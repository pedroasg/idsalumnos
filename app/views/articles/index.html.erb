<h3>Noticas</h3>
<div class="articles">
  <% @articles.each do |article| %>
    <div class="article">
      <h3><%= article.title %></h3>
      <div class="under-title">
        Redactado por: <%= article.author %>
        el <%= article.created_at.strftime('%v') %>
      </div>
      <div class="contenido">
        <div class="image">
          <%= image_tag article.image %>
        </div>
        <div class="texto">
          <p><%= raw (article.body.truncate(840)) %></p>
        </div>
      </div>
      <div class="more">
        <%= link_to "Leer mÃ¡s...", article_path(article) %>
      </div>
    </div>
  <% end %>
</div>
