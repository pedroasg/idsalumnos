<% content_for :title, "IDS Comite de Alumnos | #{@article.title}" %>
<div class="article">
  <h3><%= @article.title %></h3>
  <div class="under-title">
    Redactado por: <%= @article.author %>
    el <%= @article.created_at.strftime('%v') %>
  </div>
  <div class="contenido">
    <div class="image">
      <%= image_tag @article.image %>
    </div>
    <div class="texto">
      <%= raw(@article.body) %>
    </div>
  </div>
  <div class="social">
    <div class="fb-like" data-layout="standard" data-action="like" data-show-faces="true" data-share="true">
    </div>
  </div>
</div>

<div class="comments">
  <% if current_user %>
    <div class="new-comment">
      <%= render 'comments_form' %>
    </div>
  <% else %>
    <div class="no-session">
      <h1>Inicia sesi√≥n con <%= link_to "Facebook", "/auth/facebook" %> para comentar!<h1>
    </div>
  <% end %>

  <%= render 'comments_index' %>

</div>
